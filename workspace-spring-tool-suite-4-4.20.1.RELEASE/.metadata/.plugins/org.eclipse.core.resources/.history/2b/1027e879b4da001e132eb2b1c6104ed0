package com.example.estate.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.example.estate.entity.Product;
import com.example.estate.repository.ProductRepository;

@Service
public class ProductService {

	@Value("${upload.path}")
	private String uploadPath;

	@Autowired
	private ProductRepository productRepository;

	@Transactional
	public void saveProduct(byte[] productImage, String productName, String infomation, int productPrice) {
		try {
			Product product = new Product();
			product.setProductName(productName);
			product.setInfomation(infomation);
			product.setProductPrice(productPrice);

			// Product 엔터티에 이미지 파일 저장
			product.setProductImage(productImage);

			// Product 엔터티를 저장
			productRepository.save(product);
		} catch (Exception e) {
			// 예외 처리
			e.printStackTrace();
			throw new RuntimeException("Failed to save product with image");
		}
	}

	@Transactional(readOnly = true)
	public byte[] getProductImage(Long productCode) {
		try {
			Product product = productRepository.findByProductCode(productCode);
			if (product != null) {
				return product.getProductImage();
			}
			return null; // 해당하는 제품이 없는 경우 null 반환
		} catch (Exception e) {
			e.printStackTrace();
			throw new RuntimeException("Failed to get product image");
		}
	}

	@Transactional(readOnly = true)
	public List<Product> getAllProducts() {
		return productRepository.findAll();
	}

	 public List<Product> getRecentlyViewedProducts() {
	        // 여기서는 세션에서 사용자 정보를 가져오는 로직을 가정합니다.
	        // 실제 프로젝트에서는 Spring Security 또는 다른 인증/인가 방식을 사용할 수 있습니다.
	        String currentUserEmail = getCurrentUserEmail();

	        // 사용자 이메일을 기반으로 최근에 본 상품을 가져오는 로직을 추가합니다.
	        // 예시로 최근에 등록된 상품 5개를 가져오도록 작성했습니다.
	        List<Product> recentlyViewedProducts = productRepository.findRecentlyViewedProducts(currentUserEmail, 5);

	        return recentlyViewedProducts;
	    }

	    // 실제로는 Spring Security 또는 다른 방식으로 사용자 정보를 가져오는 로직을 추가해야 합니다.
	    private String getCurrentUserEmail() {
	        // 여기서는 간단한 예시로 세션에서 직접 이메일을 가져오도록 했습니다.
	        // 실제로는 Spring Security 등을 사용하여 보안적인 접근 방식을 사용해야 합니다.
	        return (String) SecurityContextHolder.getContext().getAuthentication().getPrincipal();
	    }
	
}
